}

    #result .score-label h1 {
        font-weight: 600;
    }

        #result .score-label h1 i {
            margin-left: 10px;
        }

    #result .score-label h1, #result .message  {
        text-align: center;
    }

    #result .score-detail h3 {
        margin-top: 19px;
        padding-left: 15px;
    }

#result-stats {
    padding: 20px;
}

table, td, th {
    padding: 10px;
}

table {
