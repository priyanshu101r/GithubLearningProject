/* Radio Button*/

@@-webkit-keyframes click-wave {
    0% {
        height: 40px;
        width: 40px;
        opacity: 0.35;
        position: relative;
        outline: none;
    }

    100% {
        height: 200px;
        width: 200px;
        margin-left: -80px;
        margin-top: -80px;
        opacity: 0;
        outline: none;
    }
}

@@-moz-keyframes click-wave {
    0% {
